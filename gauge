import React from 'react';
import { render, screen } from '@testing-library/react';
import '@testing-library/jest-dom';
import { describe, it, expect } from 'vitest';
import MarketSectors from './MarketSectors';

describe('MarketSectors Component', () => {
  it('renders the Market and Sectors title', () => {
    render(<MarketSectors />);
    expect(screen.getByText(/Market and Sectors/i)).toBeInTheDocument();
  });

  it('renders the "See All" link', () => {
    render(<MarketSectors />);
    expect(screen.getByText(/See All/i)).toBeInTheDocument();
  });

  it('renders all market sectors', () => {
    render(<MarketSectors />);
    const sectorItems = screen.getAllByRole('listitem');
    expect(sectorItems).toHaveLength(9);
  });

  it('renders correct market sector names and values', () => {
    render(<MarketSectors />);
    
    expect(screen.getByText("NIFTY 50")).toBeInTheDocument();
    expect(screen.getByText("22558.40")).toBeInTheDocument();
    expect(screen.getByText("▲8.27")).toBeInTheDocument();

    expect(screen.getByText("USD")).toBeInTheDocument();
    expect(screen.getByText("83.52")).toBeInTheDocument();
    expect(screen.getByText("▲0.17")).toBeInTheDocument();

    expect(screen.getByText("Gold")).toBeInTheDocument();
    expect(screen.getByText("7385.95")).toBeInTheDocument();
    expect(screen.getByText("▼8.07")).toBeInTheDocument();

    // Add more checks for other items if needed
  });
});