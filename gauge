import React from 'react';
import { render, screen } from '@testing-library/react';
import '@testing-library/jest-dom';
import { describe, it, expect } from 'vitest';
import AssetClass from './AssetClass';

describe('AssetClass Component', () => {
  const testData = {
    realEstate: 40,
    commodities: 30,
    crypto: 20,
    others: 10,
  };

  it('renders the Asset Class title', () => {
    render(<AssetClass data={testData} />);
    expect(screen.getByText(/Asset Class/i)).toBeInTheDocument();
  });

  it('renders the description', () => {
    render(<AssetClass data={testData} />);
    expect(screen.getByText(/Asset class distribution in your portfolio/i)).toBeInTheDocument();
  });

  it('renders the Doughnut chart', () => {
    render(<AssetClass data={testData} />);
    const canvas = screen.getByRole('img');
    expect(canvas).toBeInTheDocument();
  });
});